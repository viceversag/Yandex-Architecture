@startuml
title Warmhouse Code Diagram

top to bottom direction

!includeurl https://raw.githubusercontent.com/RicardoNiepel/C4-PlantUML/master/C4_Component.puml

class User {
  +String name
  +String email
  +List<Locations> location
  +void register_request()
  +void login()
  +void send_problem()
}

class Admin {
  +String name
  +String email
  +void register_user()
  +void login()
}

class Serviceman {
  +String name
  +String email
  +void resolve_problem()
  +void login()
}

class Locations {
  +String type
  +String address
  +List<Sensor> sensor
  +void register_sensor()
}

class Sensor {
  +String type
  +String manufacturer
  +String serial_number
  +Boolean maintenance_needed
  +Float send_data()
}

class Problem {
  +Integer problem_id
  +String type
  +List<Sensor> sensor
}

class Manufacturer {
  +String name
  +String email
  +List<Sensor> sensor
  +Boolean maintenance_needed
}
User "1" -- "0..*" Locations : has
User "1" -- "0..*" Problem : includes
Sensor "1" -- "1" Problem : has
Serviceman "1" -- "0..*" Problem : includes
Locations "1" -- "0..*" Sensor : includes
Manufacturer "1" -- "0..*" Sensor : includes
Admin "1" -- "0..*" User : includes

@enduml